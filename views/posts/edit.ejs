<% if(post.image !== "") { %>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <img id="edit-image" src="<%= post.image %>">
        </div>
        <div class="col-md-2"></div>
    </div>
<% } %>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8" id="posts-edit">
        <form action="/posts/<%= post._id%>?_method=PUT&_csrf=<%= csrf %>" enctype="multipart/form-data" method="post">
            <select class="link-file-dropdown form-control" name="imageupload">
                <option value="noimage">Post without an image</option>
                <option value="link">Use a link to show the image</option>
                <option value="file">Upload the image</option>
            </select><br/>
            
            <div class=urlImage class="form-group">
                <% if(!(post.image.split("/")[1] == "uploads")) { %>
                    <input class="form-control" type="text" name="image"  value="<%= post.image %>">
                <% } else { %>
                    <input class="form-control" type="text" name="image"  placeholder="image url">
                <% } %>
            </div>
            
            <div class=fileImage class="form-group">
                <input class="form-control" type="file" name="image">
            </div>
            
            <div class="form-group">
                <textarea class="form-control" rows="4" cols="50" name="description"><%= post.description %></textarea>
            </div>
            
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="privacy" value="private" <% if(post.personal) { %> checked <% } %>> Private post.
                </label>
            </div>
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
    </div>
    <div class="col-xs-2"></div>
</div>
<button class="btn btn-info"><i class="glyphicon glyphicon-hand-left"></i> Go back</button>
<script src="/js/filelink.js"></script>