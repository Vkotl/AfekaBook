<form action="/posts?_csrf=<%= csrf %>" enctype="multipart/form-data" method="post">
    <select class="link-file-dropdown form-control" name="imageupload">
        <option value="noimage">Post without an image</option>
        <option value="link">Use a link to show the image</option>
        <option value="file">Upload the image</option>
    </select><br/>
    
    <div class="form-group urlImage">
        <input class="form-control" type="text" name="image" placeholder="Image URL">
    </div>
    
    <div class="form-group fileImage">
        <input class="form-control" type="file" name="image">
    </div>
    
    <div class="form-group">
        <textarea class="form-control" rows="4" cols="50" name="description" placeholder="Description"></textarea>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" name="privacy" value="private"> Private post.
        </label>
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
    </div>
</form>

<script src="/js/filelink.js"></script>